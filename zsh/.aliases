# Navigate
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"
alias ws="cd $HOME/workspace"
alias vs="cd $HOME/vaults"

# Recursively delete `.DS_Store` files
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"

# Empty Trash
# You have to give to your terminal Full Disk permissions in the security settings
# Security & Privacy > Privacy > Full Disk Access > Your Terminal
alias trash="rm -fr ~/.Trash"

# Empty Downloads on macOS
alias dclean="cd ~/Downloads; rm -fr *;cd -"

# Brew
alias b="brew"
alias bt="brew tap"
alias bi="brew install"
alias brm="brew uninstall"
alias bu="brew -v update; brew upgrade --force-bottle; brew cleanup; brew doctor"
alias bc='brew install --cask'

# ls overwrite by exa
# https://the.exa.website/
alias l='exa'
alias ls='exa'
alias ll='exa -l'
alias lll='exa -l | less'
alias lla='exa -la'
alias llt='exa -T'
alias llfu='exa -bghHliS --git'

# Net
alias iplocal="ipconfig getifaddr en0"
alias ips="ifconfig -a | grep -o 'inet6\? \(\([0-9]\+\.[0-9]\+\.[0-9]\+\.[0-9]\+\)\|[a-fA-F0-9:]\+\)' | sed -e 's/inet6* //'"

# Shortcuts
alias g="git"
alias vim="nvim"
alias v="nvim"
alias e='emacsclient -c -n -a ""'
alias al="less ~/.aliases"
alias gal="g al"
alias gaf="g al | grep"

# NVM
alias n="nvm"
alias nu="nvm use"
alias nus="nvm use --lts"
alias nin="nvm install"
alias nun="nvm uninstall"
alias nl="nvm list"

# Docker
alias d="docker"
alias dr="docker run"
alias drd="docker run -d"
alias di="docker images"
alias dri="docker rmi"
alias dp="docker ps"
alias dpa="docker ps -a"
alias dsp="docker system prune --all"
alias drf='docker rm $(docker ps -a -q) -f'
## Docker Compose
alias dc="docker-compose"
alias dcu="docker-compose up"
alias dcud="docker-compose up -d"
alias dcub="docker-compose up --force-recreate --build"
alias dcd="docker-compose down"
alias dcl="docker-compose logs --tail=all | grep"
alias dcdri="docker-compose down --rmi all --remove-orphans"

# File size
alias fs="stat -f \"%z bytes\""

# Clear projects node_modules
alias rmnm="rm -rf node_modules"

# Lock the screen (when going AFK)
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
