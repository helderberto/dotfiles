theme = catppuccin-mocha

adjust-cell-height = 5%
command = /bin/zsh -c "tmux new -A -s main"
copy-on-select = true
shell-integration = zsh
scrollback-limit = 1000000

# macos
macos-non-native-fullscreen=visible-menu
macos-option-as-alt = true
window-decoration=false
window-padding-y = 8
window-padding-x = 8
window-padding-color = extend
window-padding-balance = true
window-save-state = always

# font settings
font-family = Hack Nerd Font Mono
font-family-bold = Hack Nerd Font Mono Bold
font-family-italic = Hack Nerd Font Mono Italic
font-family-bold-italic = Hack Nerd Font Mono Bold Italic
font-size = 12
font-thicken = true

# vim navigation
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

# To delete from the current position to the start of the line
keybind = super+backspace=esc:w

copy-on-select = clipboard
